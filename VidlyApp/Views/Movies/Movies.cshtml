@model Vidly.ViewModels.MoviesViewModel



<h1> Movies </h1>

@if (!Model.Movies.Any())
{
<p>Threre are no Movies</p>
}

<table>
    <thread>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thread>
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td>@Html.ActionLink($"{movie.Name}", movie.Id.ToString(), "Movies")</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
</table>
