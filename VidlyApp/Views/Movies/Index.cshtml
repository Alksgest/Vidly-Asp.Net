@model VidlyApp.ViewModels.MoviesViewModel



<h1> Movies </h1>

@if (!Model.Movies.Any())
{
    <p>Threre are no Movies</p>
}
@using (Html.BeginForm("New", "Movies"))
{
    <button type="submit">New Movie</button>
}
    <table>
        <thread>
            <tr>
                <th style="padding: 20px">Movie</th>
                <th style="padding: 20px">Genre</th>
            </tr>
        </thread>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td style="padding: 20px">@Html.ActionLink($"{movie.Name}", "Details", new { id = movie.Id - 1 })</td>
                <td style="padding: 20px">@movie.Genre.Name</td>
            </tr>
        }
    </table>
