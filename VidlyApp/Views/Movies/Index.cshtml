@model VidlyApp.ViewModels.MoviesViewModel



<h1> Movies </h1>

@if (!Model.Movies.Any())
{
    <p>Threre are no Movies</p>
}
@using (Html.BeginForm("New", "Movies"))
{
    <button type="submit">New Movie</button>
    <p></p>
}
    <table id="movies" class="table table-bordered table-hover">
        <thread>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thread>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink($"{movie.Name}", "Edit", new { id = movie.Id })</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
