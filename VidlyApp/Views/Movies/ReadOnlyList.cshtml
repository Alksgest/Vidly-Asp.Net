@model VidlyApp.ViewModels.MoviesViewModel



<h2> Movies </h2>



<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "releaseDate",
                        render: function (data) {
                            return data;
                        }
                    }                  
                ]
            });

        });

    </script>
}

